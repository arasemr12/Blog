<div style="margin: 150px;"></div>
<div class="flex justify-center">
<form class="w-full lg:w-1/2 bg-gray-800 py-6 px-8 rounded-lg" action="/login" method="post">
    <% if (hasMessages) { %>
        <ul>
            <% messages.forEach(function(message){ %>
                <li>
                    <%= message %>
                </li>
                <% }); %>
        </ul>
        <% } %>
            <input type="text" name="username" placeholder="Username." autocomplete="off" required><br><br>
            <input type="password" name="password" placeholder="Password." autocomplete="off" required><br><br>
            <div class="mb-10">
                <input class="w-auto" type="checkbox" id="remember" name="remember" checked value="true">
                <label class="form-check-label" for="remember">
                    Remember me(30 days)
                </label>
            </div>
            <button type="submit" class="green-button">Submit</button>
</form>
</div>