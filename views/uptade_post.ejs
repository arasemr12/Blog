<div style="height: auto;" class="card">
    <div class="card-body">
      <h5 class="card-title"><%=post.title%></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%=post.dateCreated%></h6>
      <p class="card-text"><pre><%=post.details%></pre></p>
      <a href="/users/<%=post.author[0].id%>" class="card-link"><%=post.author[0].name%></a><br><br>
    </div>
  </div>
  <form class="form-group" action="/posts/<%=post.id%>/uptade" method="post">
    <input class="form-control" type="text" name="title" placeholder="Title." autocomplete="off" required><br><br>
    <textarea class="form-control" name="details" cols="20" rows="5" placeholder="Details." required></textarea><br><br>
    <button type="submit" class="btn btn-success">Submit.</button>
</form>