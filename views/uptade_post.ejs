<div class="flex justify-center">
  <div class="w-full lg:w-1/2 bg-gray-800 py-6 px-8 rounded-lg">
    <div class="card-body">
      <h5 class="card-title"><%=post.title%></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%=post.dateCreated%></h6>
      <hr class="mb-4 mt-4">
      <a href="/users/<%=post.author[0]._id%>" class="card-link">
        <%=post.author[0].name%>
        <img src="/files/<%=post.author[0]._id%><%=post.author[0].profile%>" class="mx-auto" width="64" alt="">
      </a>
    </div>
  <form action="/posts/<%=post.id%>/uptade" method="post">
    <div class="mb-4">
      <input type="text" name="title" placeholder="Title" autocomplete="off" required value="<%=post.title%>">
    </div>
    <div class="mb-4">
      <textarea name="details" cols="20" rows="8" placeholder="Details" required><%=post.details%></textarea>
    </div>
    <div>
      <button type="submit" class="green-button">Submit</button>
    </div>
</form>
</div>
</div>