<div class="flex justify-center">
  <div class="w-full lg:w-1/2 bg-gray-800 py-6 px-8 rounded-lg">
<div style="height: auto;" class="card">
    <div class="card-body">
      <h5 class="card-title">Username: <%=user.username%></h5>
      <h6 class="card-subtitle mb-2 text-muted">Name: <%=user.name%></h6>
      <p class="card-text">Password: <%=user.password%></p>
    </div>
  </div>
  <form class="form-group" action="/users/<%=user._id%>/uptade" method="post">
    <div class="mb-4">
      <input type="text" name="username" placeholder="New username." autocomplete="off" required>
    </div>
    <div class="mb-4">
      <input type="text" name="name" placeholder="New name." autocomplete="off" required>
    </div>
    <div class="mb-4">
      <input type="text" name="password" placeholder="New password." autocomplete="off" required>
    </div>
    <div>
      <button type="submit" class="green-button">Submit</button>
    </div>
</form>
</div>