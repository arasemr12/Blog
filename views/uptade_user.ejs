<div style="height: auto;" class="card">
    <div class="card-body">
      <h5 class="card-title">Username: <%=user.username%></h5>
      <h6 class="card-subtitle mb-2 text-muted">Name: <%=user.name%></h6>
      <p class="card-text">Password: <%=user.password%></p>
    </div>
  </div>
  <form class="form-group" action="/users/<%=user._id%>/uptade" method="post">
    <input class="form-control" type="text" name="username" placeholder="New username." autocomplete="off" required><br><br>
    <input class="form-control" type="text" name="name" placeholder="New name." autocomplete="off" required><br><br>
    <input class="form-control" type="text" name="password" placeholder="New password." autocomplete="off" required><br><br>
    <button type="submit" class="btn btn-success">Submit.</button>
</form>